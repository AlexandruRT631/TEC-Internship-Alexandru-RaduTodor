
@{
    ViewData["Title"] = "Index";
}
@addTagHelper *,Microfost.AspNetCore.Mvc.TagHelpers
@addTagHelper *,AuthoringTagHelpers
@model List<Admin>
<h1>Admin List</h1>
<div>
    <form asp-action="Disconnect" method="post" class="d-inline">
        <button type="submit" class="btn btn-primary" style="color:white">Disconnect</button>
    </form>
    <a style="color:white" class="btn btn-primary" asp-action="Register">Add</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Hashed Password</th>
                
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
           @foreach (var item in Model)
           {
               <tr>
                   <td>@item.UserName</td>
                   <td>@item.Password</td>
                   
                   <td>
                       <a style="color:white" class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Update</a>
                       <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                           <button type="submit" class="btn btn-danger" style="color:white">Delete</button>
                       </form>
                   </td>
               </tr>
           }
        </tbody>
    </table>
</div>


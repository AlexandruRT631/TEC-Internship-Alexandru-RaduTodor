
@{
    ViewData["Title"] = "Index";
}
@addTagHelper *,Microfost.AspNetCore.Mvc.TagHelpers
@addTagHelper *,AuthoringTagHelpers
@model List<PersonInformation>
<h1>Person List</h1>
<div>
    <a asp-action="Add" class="btn btn-primary">Add</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Position Name</th>
                <th>Department Name</th>
                <th>Salary</th>
                
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
           @foreach (var item in Model)
           {
               <tr>
                   <td>@item.Name</td>
                   <td>@item.PositionName</td>
                   <td>@item.DepartmentName</td>
                   <td>@item.Salary</td>
                   
                   <td>
                       <a style="color:white" class="btn btn-success" asp-action="Update" asp-route-id="@item.PersonId">Update</a>
                       <form asp-action="Delete" asp-route-id="@item.PersonId" method="post" class="d-inline">
                           <button type="submit" class="btn btn-danger" style="color:white">Delete</button>
                       </form>
                   </td>
               </tr>
           }
        </tbody>
    </table>
</div>

